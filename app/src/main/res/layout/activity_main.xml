<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/dayDate"
        android:text="Monday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/fullDate"
        android:text="01 Jan 1970"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"/>


    <Chronometer
        android:id="@+id/chronometerWorkTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"/>

    <Chronometer
        android:id="@+id/chronometerBreakTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Start Work"
        android:onClick="startWorking"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Take a break"
        android:onClick="takeBreak"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="End Workday"
        android:onClick="endWorkday"/>
</LinearLayout>